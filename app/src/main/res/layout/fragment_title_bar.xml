<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/title_bar_fragment_layout"
    android:padding="@dimen/tbd_padding"
    android:background="@color/tbc_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_fragment_left_icon"
        android:visibility="gone"
        android:layout_gravity="center_vertical|left"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_fragment_right_icon"
        android:visibility="gone"
        android:layout_gravity="center_vertical|right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/title_bar_fragment_text"
        android:textColor="@color/tbc_text_color"
        android:textSize="@dimen/tbd_title_size"
        android:layout_gravity="center"/>
</FrameLayout>